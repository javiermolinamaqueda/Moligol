{% extends "plantillaBase.php.twig" %}

{% block head %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="estilos/addBotas.css">
{% endblock %}

{% block contenido %}
<div class="row" style="margin-top:50px;">
    <div cass="col-md-4"></div>
    <div class="col-md-4">
        <form method="POST">
            <input type="hidden" name="con" value="admin"/>
            <input type="hidden" name="ope" value="addBota"/>
            <label><strong>Marca:</strong></label>
            <select name="idMar">
                {% for item in mar %}
                    <option value="{{item.idMar}}">{{item.nombre}}</option>
                {% endfor %}
            </select>
            <div class="form-group">
                <label><strong>Info:</strong></label>
                <input class="form-control" type="text" name="info" required/>
            </div>
            <div class="form-group">
                <label><strong>Precio:</strong></label>
                <input class="form-control" type="text" name="precio" required/>
            </div>
            <div class="form-group">
                <label><strong>Foto:</strong></label>
                <input class="form-control" type="text" name="foto" required/>
            </div>
            <button class="btn btn-primary" type="submit">Guardar</button>
            <div class="text-right">
                <a href="index.php?con=admin&ope=listarBotas">Volver</a>
            </div>
        </form>
        
    </div>
</div>

{% endblock %}